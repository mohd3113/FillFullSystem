@model  List<FillFull.Models.IndivisualList>
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Search Results</h5>
    </div>
    <div class="card-body">
        <table id="datatables-buttons2" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Waiter ID
                    </th>
                    <th>
                        Waiter Name
                    </th>
                    <th>
                       Total Hours
                    </th>
                    <th>
                       Total Wage
                    </th>
                    <th>
                       Total Extra Time Hours
                    </th>
                    <th>
                       Total Extra Time Wage
                    </th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.TotalHours
                        </td>
                        <td>
                            @item.TotalWage
                        </td>
                        <td>
                            @item.TotalExtra
                        </td>
                        <td>
                            @item.TotalExtraWage
                        </td>
                        <td>
                            @(item.TotalWage + item.TotalExtraWage)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        // Datatables with Buttons
        var datatablesButtons = $('#datatables-buttons2').DataTable({
            lengthChange: !1,
            buttons: ["copy", "print"],
            responsive: true
        });
        datatablesButtons.buttons().container().appendTo("#datatables-buttons2_wrapper .col-md-6:eq(0)")
    });
</script>